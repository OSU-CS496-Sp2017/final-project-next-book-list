<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jimdandy.mybooklist.BookDetailActivity">


    <TextView
        android:id="@+id/tv_book_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_book_detail_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_book_detail_pub_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_book_detail_avg_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_book_detail_book_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    </LinearLayout>