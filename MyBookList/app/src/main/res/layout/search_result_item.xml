<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_search_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_search_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_search_result_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_search_result_pub_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_search_result_avg_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_search_result_book_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="22dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#5b9cff" />

</LinearLayout>